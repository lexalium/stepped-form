{
    "name": "lexal/stepped-form",
    "description": "Implementation of the Stepped Form",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "php",
        "stepped-form",
        "multi step form"
    ],
    "require": {
        "php": ">=8.1",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "infection/infection": "^0.27.9",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.4",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Lexal\\SteppedForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\SteppedForm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "phpunit": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "phpstan": "phpstan",
        "phpcs": "phpcs",
        "infection": "infection -j4 --only-covered",
        "tests": [
            "@phpcs",
            "phpstan",
            "@phpunit",
            "@infection"
        ]
    }
}
